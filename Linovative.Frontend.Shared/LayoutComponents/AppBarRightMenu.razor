@inject IAppNavigationService _nav

<MudButtonGroup OverrideStyles="false" Color="Color.Inherit" Variant="Variant.Text">
    <MudMenu TransformOrigin="Origin.TopLeft" Color="Color.Inherit" Icon="@Icons.Material.Filled.MoreVert" Style="align-self: auto;">
        <MudMenuItem OnClick="@(() => _nav.NavigateTo("/logout"))" IconSize="Size.Small" Icon="@Icons.Material.Filled.Logout">Logout</MudMenuItem>
        <MudMenuItem IconSize="Size.Small" Style="white-space: nowrap" Icon="@Icons.Material.Filled.VerifiedUser">My Profile</MudMenuItem>
        <MudMenuItem IconSize="Size.Small" Style="white-space: nowrap" Icon="@Icons.Material.Filled.AdminPanelSettings">Admin Dashboard</MudMenuItem>
        @ChildContent
    </MudMenu>
</MudButtonGroup>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
