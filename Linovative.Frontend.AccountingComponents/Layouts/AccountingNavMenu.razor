@using Microsoft.AspNetCore.Components.Routing
@inject IMainMenuService _mainMenuService
@inject IMainMenuService _mainMenuService
@inject IJsonLocalizer _loc;
@inject IAppNavigationService _nav

<MudNavMenu Class="mud-width-full">
    
    <MudNavLink Class="mt-4" OnClick="(() => _mainMenuService.Toggle())" Icon="@Icons.Material.Filled.GridOn">@_loc.Accounting("Accounting.Management.Title")</MudNavLink>
    <MudDivider Class="my-2"/>
    
    <MudNavLink Icon="@Icons.Material.Outlined.Home" Href="@PageRoutes.Accounting.Index" Match="NavLinkMatch.All">@(_loc.Global("Home"))</MudNavLink>

    <MudNavGroup Expanded="@(_nav.Uri.Contains(PageRoutes.Accounting.Settings.Index, StringComparison.OrdinalIgnoreCase))" Icon="@Icons.Material.Outlined.Settings" Title="@_loc.Accounting("Menu.AccountSettings")">
        <MudNavLink Icon="@Icons.Material.Outlined.GifBox" Href="@PageRoutes.Accounting.Settings.Accounts" Match="NavLinkMatch.Prefix">@_loc.Accounting("Menu.Accounts")</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Outlined.GifBox" Href="@PageRoutes.Accounting.Settings.OutletSalesCoaMappings" Match="NavLinkMatch.Prefix">@_loc.Accounting("Menu.SalesCoaMapping")</MudNavLink>
    </MudNavGroup>

</MudNavMenu>