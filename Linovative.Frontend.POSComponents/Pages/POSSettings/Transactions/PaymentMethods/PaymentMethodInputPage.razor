@using LinoVative.Shared.Dto.MasterData.Payments
@using LinoVative.Shared.Dto.Outlets
@using Linovative.Frontend.POSComponents.Bases
@using Linovative.Frontend.Services.Models
@using Linovative.Frontend.Shared.InputComponents.Dropdowns.SingleDropdown
@using Linovative.Frontend.POSComponents.Pages.POSSettings.Outlets.Shared
@using LinoVative.Shared.Dto.MasterData.Shifts
@using Linovative.Frontend.POSComponents.Pages.POSSettings.Transactions.Shared
@using Linovative.Shared.Interface.Enums

@attribute [Route(PageRoutes.PostManagement.PosSettings.Trasactions.Payments.PaymentMethodAdd)]
@attribute [Route(PageRoutes.PostManagement.PosSettings.Trasactions.Payments.PaymentMethodUpdate)]
@inherits POSManagementPageBase
@layout PosLayout

@inject IJsonLocalizer _loc
@inject ITopBarService _topBarService
@inject IApplicationStateService _state
@inject IPaymentMethodService _service
@inject IDialogService _dialogService
@inject IMapper _mapper
@inject IAppNavigationService _nav
@inject IGlobalMessage _globalMessage
@inject IOutletService _outletService
@implements IDisposable


<LinovativePageTitle Title="@EntityPluralName" />
<PaymentBreadcrumb Childs="@(new() { new BreadcrumbItem(EntityPluralName, href: PageRoutes.PostManagement.PosSettings.Trasactions.Payments.PaymentMethod) })" />
<PaymentTabs SelectedTab="PaymentTabs.Tabs.PaymentMethod" />
<CrudButtons PageMode="@(Id is null ? PageModes.Create : PageModes.Update)" OnSave="Save" 
             OnCancel="@(()=> _nav.NavigateTo(PageRoutes.PostManagement.PosSettings.Trasactions.Payments.PaymentMethod))" 
             IsFormSubmitting="isFormSubmitting" />
<LinovativeGap />

<MudText Typo="Typo.h6">@(Id is null ? ADD : UPDATE) @EntityName</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" lg="4">

        <AppErrorAlert AutoClose="false" @ref="@formErrorAlert" />
        <LinovativeGap />

        <MudForm @ref="form" @bind-IsValid="@isFormValid" @bind-Errors="@formErrors" @onkeypress="@OnFormKeyPress">
            @if (loaded)
            {
                <LinovativeInputText @bind-Value="@item.Name"
                                     IsRequired="true"
                                     Errors="@formResponse?.Errors"
                                     LocalizerResource="@LocalizerResource"
                                     LocalizerKey="Name" />

                <LinovativeGap />
                <PaymentTypeDropdown Required="true"
                                     Errors="@formResponse?.Errors"
                                     LocalizerResource="@LocalizerResource"
                                     LocalizerKey="Type"
                                     @bind-Value="@item.Type" />

                <LinovativeGap />
                <PaymentMethodGroupDropdown @bind-Value="@group"
                                            Required="true"
                                            Errors="@formResponse?.Errors"
                                            LocalizerResource="@LocalizerResource"
                                            LocalizerKey="@nameof(PaymentMethodViewDto.PaymentMethodGroupId)" />
            }
            else
            {
                <MudSkeleton Width="100%" Height="56px;" Class="mb-5" Style="transform: scale(1, 1)" />
                <MudSkeleton Width="100%" Height="56px;" Class="mb-5" Style="transform: scale(1, 1)" />
                <MudSkeleton Width="100%" Height="56px;" Class="mb-5" Style="transform: scale(1, 1)" />
            }

        </MudForm>
    </MudItem>
</MudGrid>


<LinovativeGap />
<LinovativeGap />
<MudText Typo="Typo.h6">@Label("PaymentMethodSettingsSection")</MudText>
<LinovativeGap />

@if (loaded)
{
    <MudExpansionPanels MultiExpansion="true">
        <MudExpansionPanel Expanded="true" Text="@Label("OutletSettings")">
            @foreach (var pm in _outletPaymentMethods.OrderBy(x => x.Key.Name))
            {
                <div class="d-flex"><MudSwitch @bind-Value="@pm.Value.IsActive" Label="@pm.Key.Name" Color="Color.Info" /></div>
                <LinovativeGap />
            }
        </MudExpansionPanel>
    </MudExpansionPanels>
}
else
{
    <MudSkeleton Width="100%" Height="56px;" Class="mb-5" Style="transform: scale(1, 1)" />
}



@code {
    [Parameter] public string? Id { get; set; }

    protected override string LocalizerResource => nameof(PaymentMethodsPage);
    protected override string EntityName => JsonLocalizer[$"{LocalizerResource}.Entity.Name.Single"];
    protected override string EntityPluralName => JsonLocalizer[$"{LocalizerResource}.Entity.Name.Plural"];

    private List<PaymentMethodViewDto> selectedItems { get; set; } = new();
    private CancellationTokenSource cts { get; set; } = new();
    private PaymentMethodUpdateDto item { get; set; } = new();
    private bool isFormValid { get; set; }
    private string[] formErrors { get; set; } = { };
    private MudForm? form { get; set; }
    private Response? formResponse { get; set; } = null;
    private bool isFormSubmitting { get; set; }
    private AppErrorAlert? formErrorAlert { get; set; }
    private bool selectedAll { get; set; }
    private List<PaymentMethodViewDto> dataSource { get; set; } = new();
    private PaymentMethodGroupViewDto? group = null;
    private List<OutletViewDto> _outlets { get; set; } = new();
    private bool loaded { get; set; } = false;
    private List<KeyValuePair<OutletViewDto, OutletPaymentMethodDto>> _outletPaymentMethods { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        isFormSubmitting = true;

        await base.OnInitializedAsync();
        _state.OnChange += StateHasChanged;
        _state.OnChange += GenerateData;
        _topBarService.SetTitle(EntityPluralName);

        await LoadData();

        loaded = true;
        isFormSubmitting = false;
        _state.NotifyStateChanged();
    }


    void OnFormKeyPress()
    {
        formResponse = null;
        formErrorAlert?.HideAlert();
        _state.NotifyStateChanged();
    }

    async Task Reset()
    {
        item = new();

        formResponse = null;
        isFormSubmitting = false;
        selectedItems = new();
        selectedAll = false;
        await HideAllAllert();
        _state.NotifyStateChanged();
    }

    async Task HideAllAllert()
    {
        if (form is not null) await form.ResetAsync();
        formErrorAlert?.HideAlert();
    }

    Task Save()
    {
        form!.Validate();

        if (!isFormValid)
            return Task.CompletedTask;

        if (Id is null) return SaveNew();

        return SaveUpdate();
    }

    async Task SaveNew()
    {
        isFormSubmitting = true;

        item.PaymentMethodGroupId = group!.Id;
        formResponse = await _service.Create(item, cts.Token);
        if (formResponse)
        {
            await Reset();
            _globalMessage.SetSuccessMessage(CreatedSuccessMessage);
            _nav.NavigateTo(PageRoutes.PostManagement.PosSettings.Trasactions.Payments.PaymentMethod);
            return;
        }

        isFormSubmitting = false;
        formErrorAlert!.ShowAlert(formResponse);
    }

    async Task SaveUpdate()
    {
        isFormSubmitting = true;
        item.PaymentMethodGroupId = group!.Id;
        formResponse = await _service.Update(item, cts.Token);
        if (formResponse)
        {
            await Reset();
            _globalMessage.SetSuccessMessage(UpdateSuccessMessage);
            _nav.NavigateTo(PageRoutes.PostManagement.PosSettings.Trasactions.Payments.PaymentMethod);
            return;
        }

        isFormSubmitting = false;
        formErrorAlert!.ShowAlert(formResponse);
    }


    public void Dispose()
    {
        _state.OnChange -= StateHasChanged;
        _state.OnChange -= GenerateData;
    }

    async Task LoadData()
    {
        var outletsTasks = _outletService.GetAll(cts.Token);
        if(Id is null)
        {
            _outlets = (await outletsTasks).Data!;
        }
        else
        {
            var paymentMethodTasks = _service.GetForUpdate(new Guid(Id!), cts.Token);
            await Task.WhenAll(paymentMethodTasks, outletsTasks);

            item = (await paymentMethodTasks).Data!;
            group = new() { Id = item.PaymentMethodGroup!.Id, Name = item.PaymentMethodGroup.Name };
            _outlets = (await outletsTasks).Data!;
        }

        _state.NotifyStateChanged();
    }

    void GenerateData()
    {
        Func<OutletViewDto, OutletPaymentMethodDto> getPaymentMethod = (outlet) =>
        {
            var p = item.OutletPaymentMethods.FirstOrDefault(x => x.OutletId == outlet.Id);
            if (p is not null) return p;

            p = new() { OutletId = outlet.Id, PaymentMethodId = item.Id, IsActive = false};
            item.OutletPaymentMethods.Add(p);
            return p;
        };
        _outletPaymentMethods = _outlets.Select(x => new KeyValuePair<OutletViewDto, OutletPaymentMethodDto>(x, getPaymentMethod(x))).ToList();
    }

}
