@inject IJsonLocalizer _loc

<MasterDataBreadcrumb Childs="@Items()" />

@code {
    [Parameter]
    public List<BreadcrumbItem> Childs { get; set; } = new();

    List<BreadcrumbItem> Items() 
    {
        var items = _parents.ToList();
        items.AddRange(Childs);
        return items;
    }

    private static List<BreadcrumbItem> _parents = new();

    string? items { get; set; }

    protected override async Task OnInitializedAsync()
    {
        items = _loc.PosManagement("Menu.Tab.Items");

        _parents = new List<BreadcrumbItem>
        {
            new BreadcrumbItem(items, href: PageRoutes.PostManagement.ItemMaster.IndexItems)
        };
        
        await base.OnInitializedAsync();
    }
}