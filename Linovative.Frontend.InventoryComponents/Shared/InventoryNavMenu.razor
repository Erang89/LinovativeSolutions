@using Microsoft.AspNetCore.Components.Routing
@inject IMainMenuService _mainMenuService
@inject IMainMenuService _mainMenuService
@inject IJsonLocalizer _loc;
@inject IAppNavigationService _nav

<MudNavMenu Class="mud-width-full">

    <MudNavLink OnClick="(() => _mainMenuService.Toggle())" Icon="@Icons.Material.Filled.GridOn">@_loc.Inventory("Inventory.Management.Title")</MudNavLink>
    <MudDivider Class="my-2" />

    <MudNavLink Icon="@Icons.Material.Outlined.Home" Href="@PageRoutes.Accounting.Index" Match="NavLinkMatch.All">@(_loc.Global("Home"))</MudNavLink>

    <MudNavGroup Expanded="@(_nav.Uri.Contains(PageRoutes.Accounting.Settings.Index, StringComparison.OrdinalIgnoreCase))" Icon="@Icons.Material.Outlined.Settings" Title="@_loc.Inventory("Menu.Settings")">
        <MudNavLink Icon="@Icons.Material.Outlined.GifBox" Href="@PageRoutes.Accounting.Settings.Accounts" Match="NavLinkMatch.Prefix">@_loc.Inventory("Menu.Warehouses")</MudNavLink>
    </MudNavGroup>

</MudNavMenu>